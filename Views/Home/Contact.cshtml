    <script>
        function filterCars() {
            var input, filter, table, tr, td, i, txtValue, visible = false;
            input = document.getElementById("searchCar");
            filter = input.value.toUpperCase();
            table = document.getElementById("carTable");
            tr = table.getElementsByTagName("tr");

            for (i = 1; i < tr.length; i++) {
                td = tr[i].getElementsByTagName("td")[0];
                if (td) {
                    txtValue = td.textContent || td.innerText;
                    if (txtValue.toUpperCase().indexOf(filter) > -1) {
                        tr[i].style.display = "";
                        visible = true;
                    } else {
                        tr[i].style.display = "none";
                    }
                }
            }
            document.getElementById("tableContainer").style.display = visible ? "block" : "none";
        }

        function compareCars() {
            var checkboxes = document.querySelectorAll('.compare-check:checked');
            var comparisonBody = document.getElementById("comparisonBody");
            comparisonBody.innerHTML = "";

            if (checkboxes.length < 2) {
                alert("Please select at least two cars to compare.");
                return;
            }

            checkboxes.forEach(function (checkbox) {
                var row = checkbox.closest("tr").cloneNode(true);
                row.removeChild(row.lastChild);
                comparisonBody.appendChild(row);
            });

            document.getElementById("comparisonResult").style.display = "block";
        }
    </script>






