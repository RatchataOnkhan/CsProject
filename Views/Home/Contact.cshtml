<!-- JavaScript -->
<script>
    let currentCar = "";

    function openCarPopup(model, price, imgSrc, details) {
        document.getElementById("popupCarTitle").innerText = model;
        document.getElementById("popupCarPrice").innerText = price;
        document.getElementById("popupCarImage").src = imgSrc;
        document.getElementById("popupCarDetails").innerText = details;
        document.getElementById("carPopup").style.display = "block";

        currentCar = model;
        loadReviews();
        loadRating();
    }

    function closeCarPopup() {
        document.getElementById("carPopup").style.display = "none";
    }

    function toggleFavoritePopup() {
        alert("🚗 รถถูกเพิ่มในรายการโปรดแล้ว!");
    }

    function setRating(stars) {
        let starsList = document.querySelectorAll(".rating span");
        starsList.forEach((star, index) => {
            star.classList.toggle("active", index < stars);
        });

        localStorage.setItem(`rating_${currentCar}`, stars);
    }

    function loadRating() {
        let savedRating = localStorage.getItem(`rating_${currentCar}`);
        let starsList = document.querySelectorAll(".rating span");

        starsList.forEach((star, index) => {
            star.classList.toggle("active", index < savedRating);
        });
    }

    function submitReview() {
        let reviewText = document.getElementById("reviewText").value.trim();
        if (reviewText === "") {
            alert("กรุณาเขียนรีวิวก่อนส่ง!");
            return;
        }

        let reviews = JSON.parse(localStorage.getItem(`reviews_${currentCar}`)) || [];
        let newReview = { text: reviewText, id: Date.now() };
        reviews.push(newReview);
        localStorage.setItem(`reviews_${currentCar}`, JSON.stringify(reviews));

        document.getElementById("reviewText").value = "";
        loadReviews();
    }

    function loadReviews() {
        let reviewsContainer = document.getElementById("reviewsContainer");
        reviewsContainer.innerHTML = "";

        let reviews = JSON.parse(localStorage.getItem(`reviews_${currentCar}`)) || [];
        reviews.forEach(review => {
            let reviewItem = document.createElement("div");
            reviewItem.classList.add("review-item");
            reviewItem.innerHTML = `<span>${review.text}</span>
                                    <span class="delete-review" onclick="deleteReview(${review.id})">🗑️</span>`;
            reviewsContainer.appendChild(reviewItem);
        });
    }

    function deleteReview(reviewId) {
        let reviews = JSON.parse(localStorage.getItem(`reviews_${currentCar}`)) || [];
