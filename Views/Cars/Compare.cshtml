@model List<CombustionCarGuideWeb.Models.Car>

<!-- ==== FORM: เลือกรถ 2 คันเพื่อเปรียบเทียบ ==== -->
<div class="container mt-navbar animate__animated animate__fadeInDown">
    <form method="get" asp-action="Compare" asp-controller="Cars" class="row mb-5">
        <div class="col-md-5">
            <label for="car1Id">เลือกรถคันที่ 1:</label>
            <select name="car1Id" class="form-control select2">
                <option value="">-- กรุณาเลือก --</option>
                @foreach (var item in ViewBag.CarList as SelectList)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>
        </div>

        <div class="col-md-5">
            <label for="car2Id">เลือกรถคันที่ 2:</label>
            <select name="car2Id" class="form-control select2">
                <option value="">-- กรุณาเลือก --</option>
                @foreach (var item in ViewBag.CarList as SelectList)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>
        </div>

        <div class="col-md-2 d-flex align-items-end">
            <button type="submit" class="btn btn-primary w-100">Compare</button>
        </div>
    </form>
</div>

<!-- ==== DISPLAY RESULT ==== -->
@if (Model != null && Model.Count >= 2)
{
    var car1 = Model[0];
    var car2 = Model[1];

    <div class="container animate__animated animate__zoomIn">
        <h3 class="text-center fw-bold mb-5">🔍 เปรียบเทียบรถยนต์</h3>

        <!-- ชื่อรุ่น -->
        <div class="row text-center mb-4">
            <div class="col-md-4 offset-md-2">
                <select class="form-select text-center" disabled>
                    <option selected>@car1.Brand?.Name @car1.ModelName</option>
                </select>
            </div>
            <div class="col-md-4">
                <select class="form-select text-center" disabled>
                    <option selected>@car2.Brand?.Name @car2.ModelName</option>
                </select>
            </div>
        </div>

        <!-- ภาพรถ -->
        <div class="row text-center mb-3">
            <div class="col-md-4 offset-md-2">
                <img src="@Url.Content(car1.ImageUrl)" alt="@car1.ModelName" class="img-fluid w-100"
                    onerror="this.src='../assets/images/CAR/default.png'" style="height: 180px; object-fit: cover;">
            </div>
            <div class="col-md-4">
                <img src="@Url.Content(car2.ImageUrl)" alt="@car2.ModelName" class="img-fluid w-100"
                    onerror="this.src='../assets/images/CAR/default.png'" style="height: 180px; object-fit: cover;">
            </div>
        </div>


        <!-- ราคา -->
        <div class="row text-center fw-bold mb-4">
            <div class="col-md-4 offset-md-2 text-danger">
                เริ่มต้น: @car1.MSRP.ToString("C0")
            </div>
            <div class="col-md-4 text-danger">
                เริ่มต้น: @car2.MSRP.ToString("C0")
            </div>
        </div>

        <!-- รายละเอียด -->
        <div class="row border-top border-bottom py-4">
            <div class="col-md-4 offset-md-2 text-center">
                <p><strong>⚙️ เครื่องยนต์:</strong><br />@car1.EngineType</p>
                <p><strong>⛽ ความประหยัด:</strong><br />@car1.FuelEconomy</p>
                <p><strong>🕹️ เกียร์:</strong><br />@car1.TransmissionType</p>
                <p><strong>🧍‍♂️ ที่นั่ง:</strong><br />@car1.SeatingCapacity</p>
            </div>
            <div class="col-md-4 text-center">
                <p><strong>⚙️ เครื่องยนต์:</strong><br />@car2.EngineType</p>
                <p><strong>⛽ ความประหยัด:</strong><br />@car2.FuelEconomy</p>
                <p><strong>🕹️ เกียร์:</strong><br />@car2.TransmissionType</p>
                <p><strong>🧍‍♂️ ที่นั่ง:</strong><br />@car2.SeatingCapacity</p>
            </div>
        </div>

        <!-- ปุ่มดูรายละเอียด -->
        <div class="row text-center mt-4">
            <div class="col-md-4 offset-md-2">
                <a href="@Url.Action("Details", "Cars", new { id = car1.Id })"
                    class="btn btn-outline-primary w-75">ดูรายละเอียด</a>
            </div>
            <div class="col-md-4">
                <a href="@Url.Action("Details", "Cars", new { id = car2.Id })"
                    class="btn btn-outline-primary w-75">ดูรายละเอียด</a>
            </div>
        </div>
    </div>
}


<style>
    .mt-navbar {
        margin-top: 100px;
        /* ดันลงจาก Navbar */
    }

    @@media (max-width: 768px) {
        .mt-navbar {
            margin-top: 120px;
        }
    }

    .card h4 {
        font-size: 1.25rem;
        font-weight: 600;
    }

    .card p {
        margin: 0.25rem 0;
    }

    @@media (max-width: 768px) {
        .card img {
            height: 150px;
        }
    }
</style>


<!-- ✅ Animate.css สำหรับ effect -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />


<!-- Select2 -->
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

<script>
    $(document).ready(function () {
        $('.select2').select2({
            placeholder: "เลือกหรือพิมพ์ชื่อรุ่นรถ",
            width: '100%'
        });
    });
</script>
