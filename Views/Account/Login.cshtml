@model CombustionCarGuideWeb.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<section id="new-cars" class="new-cars">

    <div class="container mt-navbar">
        <h2 class="text-center">Login</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success text-center">
                @TempData["SuccessMessage"]
            </div>
        }

        @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
        {
            <div class="alert alert-danger text-center">
                @ViewData["ErrorMessage"]
            </div>
        }

        <form method="post" asp-action="Login" class="container w-50 mt-4">
            <div class="mb-3">
                <label asp-for="Username" class="form-label">Username</label>
                <input asp-for="Username" class="form-control" type="text" required />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" type="password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3 form-check">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label">Remember Me</label>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="ForgotPassword">Forgot your password?</a>
                <button type="submit" class="btn btn-primary">Login</button>
            </div>

            <hr />

         <!--  <div class="mt-3 text-center">
                <p>Or login with:</p>
                <a class="btn btn-danger me-2" href="@Url.Action("ExternalLogin", "Account", new { provider = "Google" })">
                    Login with Google
                </a>
                <a class="btn btn-primary" href="@Url.Action("ExternalLogin", "Account", new { provider = "Facebook" })">
                    Login with Facebook
                </a>
               </div>-->

            <div class="mt-3 text-center">
                <p>Or Register:</p>
                <a class="btn btn-danger me-2" href="@Url.Action("Register", "Account" )">
                    Register
                </a>
            </div>
        </form>

    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
